@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

    <ul class="nav navbar-nav navbar-right">
        <li>
            @Html.ActionLink("Здравствуйте, " + User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
        </li>
        <li><a href="javascript:document.getElementById('logoutForm').submit()">Выйти</a></li>
    </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>
            <a href="/Account/Register" id="registerLink">
                <i class="fas fa-user-circle fa-fw fa-2x"></i>&nbsp;Регистрация
            </a>
        </li>
        <li>
            <a href="/Account/Login" id="loginLink">
                <i class="fas fa-sign-in-alt fa-fw fa-2x"></i>&nbsp;Авторизация
            </a>
        </li>
    </ul>
}
